<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Guiziweb\SyliusAgenticCommerceProtocolPlugin\Entity\ProductFeedConfig"
            table="guiziweb_acp_product_feed_config">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <!-- OpenAI Feed Configuration -->
        <field name="feedEndpoint" column="feed_endpoint" type="string" length="255" nullable="true" />
        <field name="feedBearerToken" column="feed_bearer_token" type="string" length="255" nullable="true" />

        <!-- Default Values for Missing Sylius Fields -->
        <field name="defaultBrand" column="default_brand" type="string" length="255" nullable="true" />
        <field name="defaultWeight" column="default_weight" type="string" length="50" nullable="true" />
        <field name="defaultMaterial" column="default_material" type="string" length="255" nullable="true" />

        <!-- Merchant Policies (Required by OpenAI) -->
        <field name="returnPolicyUrl" column="return_policy_url" type="string" length="255" nullable="true" />
        <field name="returnWindowDays" column="return_window_days" type="integer" nullable="true" />
        <field name="privacyPolicyUrl" column="privacy_policy_url" type="string" length="255" nullable="true" />
        <field name="termsOfServiceUrl" column="terms_of_service_url" type="string" length="255" nullable="true" />

        <!-- One Config Per Channel -->
        <one-to-one field="channel" target-entity="Sylius\Component\Channel\Model\ChannelInterface">
            <join-column name="channel_id" referenced-column-name="id" nullable="false" unique="true" on-delete="CASCADE" />
        </one-to-one>

        <indexes>
            <index name="idx_channel" columns="channel_id" />
        </indexes>
    </entity>

</doctrine-mapping>